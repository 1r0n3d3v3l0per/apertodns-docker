# ============================================================================
# ApertoDNS Updater - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values
#
# Get your token from: https://www.apertodns.com/dashboard
# ============================================================================

# ---------------------------------------------------------------------------
# Required Settings
# ---------------------------------------------------------------------------

# Your ApertoDNS authentication token (REQUIRED)
# Get it from: https://www.apertodns.com/dashboard > Tokens
TOKEN=your_token_here

# Domain(s) to update (REQUIRED)
# Single domain:
DOMAINS=myhost.apertodns.com

# Multiple domains (comma-separated, no spaces):
# DOMAINS=server.apertodns.com,nas.apertodns.com,vpn.apertodns.com

# ---------------------------------------------------------------------------
# Optional Settings
# ---------------------------------------------------------------------------

# Seconds between IP checks (default: 300, minimum: 60)
# Lower values = faster detection, more API calls
# Recommended: 300 (5 minutes) for most use cases
UPDATE_INTERVAL=300

# Enable IPv6 detection and updates (default: false)
# Set to "true" if you have IPv6 connectivity
DETECT_IPV6=false

# Log verbosity: "info" or "debug" (default: info)
# Use "debug" for troubleshooting
LOG_LEVEL=info

# Container timezone (default: UTC)
# Examples: Europe/Rome, America/New_York, Asia/Tokyo
# Full list: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TZ=UTC
